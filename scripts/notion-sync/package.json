{
  "name": "infinite-idol-notion-sync",
  "version": "1.0.0",
  "description": "Two-way sync between GitHub and Notion for Infinite Idol",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
